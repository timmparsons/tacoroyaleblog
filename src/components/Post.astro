---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import { Button } from "Button:astro"
type Props = {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
---

<article>
    <Image 
      src={post.data.image}
      width={600}
      height={400 / 1.5}
      alt={post.data.title}
      class="rounded-2xl shadow-xl md-4 aspect-thumbnail object-cover"
    />
    <p class="text-teal-900">{post.body.trim().slice(0, 150)}...</p>
		<a
    href={`/blog/${post.slug}`}
    class="text-zinc-900 font-semibold inline-block"
    >
	<button class="alert border border-black rounded-[5px] p-[5px] mt-5">Read Article ></button>
</article>

<script>
	const button = document.querySelector('button.alert')
	button.addEventListener('click', () => {
	console.log('Clicked')})
</script>
