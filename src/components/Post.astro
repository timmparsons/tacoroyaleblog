---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
type Props = {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
---

<article>
    <Image 
      src={post.data.image}
      width={600}
      height={400 / 1.5}
      alt={post.data.title}
      class="rounded-2xl shadow-xl md-4 aspect-thumbnail object-cover"
    />
    <p class="text-teal-900">{post.body.trim().slice(0, 150)}...</p>
		<div class="flex justify-between items-center w-full font-thin">
			<div class="flex">
				<p class="p-[5px] mt-5">{post.data.date} &#x2022;</p>
				<p class="p-[5px] mt-5">{post.data.length} read</p>
			</div>
			<a href={`/blog/${post.slug}`} class="text-zinc-900 font-semibold inline-block">
				<button class="alert border border-black rounded-[5px] mt-5">Read Article ></button>
			</a>
		</div>
</article>

<script>
	const button = document.querySelector('button.alert')
	button.addEventListener('click', () => {
	console.log('Clicked')})
</script>
